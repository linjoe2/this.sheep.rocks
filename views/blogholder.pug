doctype html
html
	head
		link(rel='stylesheet', type='text/css', href='../css/style.css')
		script(src='https://code.jquery.com/jquery-3.2.1.min.js')
		script.
			$(document).ready(function() {
				$('#Blog, #blog.content').css('height', $(window).height()});
	body
		#fb-root
		script.
			(function(d, s, id) {
			var js, fjs = d.getElementsByTagName(s)[0];
			if (d.getElementById(id)) return;
			js = d.createElement(s); js.id = id;
			js.src = 'https://connect.facebook.net/nl_NL/sdk.js#xfbml=1&version=v2.12';
			fjs.parentNode.insertBefore(js, fjs);
			}(document, 'script', 'facebook-jssdk'));
		#Blog
			a.exit(href='/') X
			#Blog.content
				!= htmlfile
				.fb-comments(data-href='https://developers.facebook.com/docs/plugins/comments#configurator', data-numposts='5')
